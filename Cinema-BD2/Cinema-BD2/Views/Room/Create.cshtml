@model Cinema_BD2.Models.Room

@{
    ViewData["Title"] = "Criar Sala";
}

<h2>Criar Sala</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TypeOfRoomId">Tipo de Sala</label>
        <select asp-for="TypeOfRoomId" asp-items="ViewBag.TypeOfRoomId" class="form-control">
            <option value="">-- Selecione --</option>
        </select>
        <span asp-validation-for="TypeOfRoomId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form>