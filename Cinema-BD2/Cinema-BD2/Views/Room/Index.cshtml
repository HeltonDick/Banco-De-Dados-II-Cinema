@model IEnumerable<Cinema_BD2.Models.Room>

@{
    ViewData["Title"] = "Salas";
}

<h2>Lista de Salas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Sala</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Capacidade</th>
            <th>Tipo de Sala</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Capacity</td>
                <td>@item.TypeOfRoom?.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                       onclick="return confirm('Tem certeza que deseja apagar esta sala?');">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>