@model Cinema_BD2.Models.PersonRole

@{
    ViewData["Title"] = "Novo Vínculo Pessoa-Função";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Pessoa</label>
        <select asp-for="PersonId" asp-items="ViewBag.PersonId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Função</label>
        <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Data de Entrada</label>
        <input asp-for="SignDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Data de Saída</label>
        <input asp-for="CancelDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Voltar</a>
</form>
